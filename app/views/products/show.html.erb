<% title "Product" %>

<p>
  <strong>Name:</strong>
  <%=h @product.name %>
</p>
<p>
  <strong>Brand:</strong>
  <%=h @product.brand_id %>
</p>
<p>
  <strong>Preço de compra:</strong>
  <%=h @product.bought_price %>
</p>
<p>
  <strong>Quantidade estocada:</strong>
  <%=h @product.stock_ammount %>
</p>
<p>
<strong>Quantidade mínima:</strong>
  <%=h @product.stock_minimum %>
</p>

<p>
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", products_path %>
</p>
