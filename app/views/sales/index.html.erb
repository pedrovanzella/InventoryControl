<% title "Sales" %>

<table>
  <tr>
    <th>Client</th>
    <th>Date</th>
  </tr>
  <% for sale in @sales %>
    <tr>
      <td><%=h sale.client_id %></td>
      <td><%=h sale.date %></td>
      <td><%= link_to "Show", sale %></td>
      <td><%= link_to "Edit", edit_sale_path(sale) %></td>
      <td><%= link_to "Destroy", sale, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Sale", new_sale_path %></p>
